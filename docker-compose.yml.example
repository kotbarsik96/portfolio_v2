portfolio_backend: 
    build: 
      context: .
      dockerfile: ./portfolio/backend/_docker/Dockerfile
    volumes:
      - ./portfolio/:/var/www/portfolio/
    container_name: backend_portfolio
    depends_on:
      - portfolio_db

  portfolio_frontend: 
    build:
      context: .
      dockerfile: ./portfolio/frontend/_docker/Dockerfile
    volumes: 
      - ./portfolio/:/var/www/portfolio
    ports:
      - 5173:5173
    container_name: frontend_portfolio
    depends_on:
      - portfolio_db

  portfolio_db: 
    image: mysql:8.0
    volumes: 
      - ./portfolio/backend/tmp/db/:/var/lib/mysql/
    env_file: ./portfolio/backend/.env
    environment: 
      MYSQL_DATABASE: kotbarsik96
      MYSQL_ROOT_PASSWORD: $MYSQL_ROOT_PASSWORD
    ports: 
      - 8101:3306
    command: mysqld --character-set-server=utf8 --collation-server=utf8_unicode_ci
    container_name: portfolio_db